
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    Html.BeginForm("Index", "Home");
}
<br />
<br />
@Html.Label("UserName")  &nbsp; @Html.TextBox("User", "", new {@class= "form-Control" })
<br />
<br />
@Html.Label("Password")  &nbsp; @Html.Password("Pass","", new { @class = "form-Control" })
<br />
<br />

@Html.Label("Male")  &nbsp; @Html.RadioButton("Gender", "Male",true)
<br />
<br />

@Html.Label("female")  &nbsp; @Html.RadioButton("Gender", "Female")
<br />
<br />


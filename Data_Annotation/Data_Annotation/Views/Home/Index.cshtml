@model Data_Annotation.Models.Employee
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <p>@Html.LabelFor(model => model.EmployeeID) &nbsp; @Html.TextBoxFor(model => model.EmployeeID)</p>
    @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "form-control" })

    <p>@Html.LabelFor(model => model.EmployeeName) &nbsp; @Html.TextBoxFor(model => model.EmployeeName)</p>
    @Html.ValidationMessageFor(model => model.EmployeeName, "", new { @class = "form-control" })

    <p>@Html.LabelFor(model => model.EmployeeAge) &nbsp; @Html.TextBoxFor(model => model.EmployeeAge)</p>
    @Html.ValidationMessageFor(model => model.EmployeeAge, "", new { @class = "form-control" })

    <p>@Html.LabelFor(model => model.EmployeeGender) &nbsp; @Html.TextBoxFor(model => model.EmployeeGender)</p>
    @Html.ValidationMessageFor(model => model.EmployeeGender, "", new { @class = "form-control" })

    <p>@Html.LabelFor(model => model.EmployeeEmail) &nbsp; @Html.TextBoxFor(model => model.EmployeeEmail)</p>
    @Html.ValidationMessageFor(model => model.EmployeeEmail, "", new { @class = "form-control" })

    <p>@Html.LabelFor(model => model.EmpPassword) &nbsp; @Html.PasswordFor(model => model.EmpPassword)</p>
    @Html.ValidationMessageFor(model => model.EmpPassword, "", new { @class = "form-control" })

    <p>@Html.LabelFor(model => model.EmpConfirmPassord) &nbsp; @Html.PasswordFor(model => model.EmpConfirmPassord)</p>
    @Html.ValidationMessageFor(model => model.EmpConfirmPassord, "", new { @class = "form-control" })

    <p>@Html.LabelFor(model => model.EmpOrganisationName) &nbsp; @Html.TextBoxFor(model => model.EmpOrganisationName, new {@Value="Aura World International"})</p>
    



    <input type="submit" value="Submit" />
    <br />
    <br />
    @Html.Raw(ViewBag.SuccessMessage)

}

